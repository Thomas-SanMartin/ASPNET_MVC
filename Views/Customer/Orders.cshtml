@model AspNetMvcAssignment.Models.CustomerViewModel

@{
    ViewData["Title"] = "Orders";
}

<div class="container mt-4">
    <h1>Orders</h1>
    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Name:</strong> @Model.FullName
        </div>
        <div class="col-md-6">
            <strong>Customer#:</strong> @Model.CustomerNumber
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Description</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                    <td>@order.Description</td>
                    <td>@order.Total.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
